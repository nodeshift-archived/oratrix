{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "./dist",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
